/* components/cosFileManager/cosFileManager.wxss */
.flex{
  display: flex;
}
.flex-col-center{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.flex-end{
  display: flex;
  justify-content: flex-end;
}
.mask, .input-modal{
 background-color: rgba(0, 0, 0, .4);
 position: fixed;
 z-index: 5;
 top: 0;
 left: 0;
 right: 0;
 margin: 0 auto;
 width: 100%;
 height: 100%; 
}

.content,.input-modal-content{
  position: absolute;
  top: 5%;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 690rpx;
  height: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  position: relative;
}

.content{
  padding-top: 100rpx;
  padding-bottom: 120rpx;
}

.top{
  display: flex;
  justify-content: space-between;
  color: #333;
  margin-bottom: 15rpx;
  position:absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #fff;
  box-sizing: border-box;
  padding:10rpx 30rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.top .view{
  min-width: 60rpx;
  min-height: 60rpx;
}

.top .img{
  width: 60rpx;
  height: 60rpx;
}

.list{
  overflow-y: scroll;
  height: 600rpx;
}

.item{
  display: inline-block;
  width: 120rpx;
  margin: 0 15rpx;
  margin-bottom: 20rpx;
  font-size: 8pt;
  text-align: center;
  position: relative;
  margin: 0 15rpx 15rpx;
  width: 120rpx;
}
.item .view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.item .icon{
  position: relative;
}
.item .file-type{
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  margin: 0 auto;
  color: #707070;
  font-weight: bold;
  transform: translateY(-50%);
  width: 90%;
  font-size: 11pt;
}
.item .checkbox{
  position: absolute;
  border-radius: 50%;
  box-sizing: border-box;
  width: 30rpx;
  height: 30rpx;
  line-height: 50rpx;
  border: 1rpx solid #fff;
  background-color: #bbb;
  right: 5rpx;
  top: 5rpx;
}
.item .checkbox.active{
  border-color: #09bb07;
  background-color: #09bb07;
  color: #fff;
}
.item .img{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 5rpx;
}
.item .name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  white-space: wrap;
  word-break:break-all;
}
.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 10rpx 30rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 11pt;
}
.bottom .multiple{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.bottom .multiple-tip{
  color: #888;
}
.bottom .multiple-tip.active{
  color: #09bb07;
}
.bottom .cancel,.bottom .confirm{
  height: 75rpx;
  line-height: 75rpx;
  width: 120rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: #09bb07;
  font-size: 11pt;
  text-align: center;
  margin-left: 20rpx;
}
.bottom .cancel {
  background-color: #aaa;
}


.input-modal{
  z-index: 6;
}
.input-modal-content{
  width: 660rpx;
  height: 300rpx;
  border-radius: 10rpx;
  top: 40%;
  transform: translateY(-50%);
}
.input-modal-content .input-modal-title{
  font-size: 13pt;
  font-weight: bold;
  margin-bottom: 5rpx;
}
.input-modal-content .input-modal-text{
  font-size: 9pt;
  margin-bottom: 10rpx;
}
.input-modal-content .input-box{
  border-bottom: 4rpx solid #aaa;
  width: 100%;
  padding: 8rpx 10rpx;
  box-sizing: border-box;
  font-size: 11pt;
  margin: 0 10rpx 30rpx;
}
.input-modal-button{
  display: flex;
  justify-content: flex-end;
  font-size: 11pt;
}
.input-modal-button .view{
  padding: 15rpx;
  margin-left: 10rpx;
  color: #09bb07;
}







